<link rel="stylesheet" href="/stylesheets/signupForm.css">
<nav id="navbar">
	<div class="container">
		<!-- Clicking on a logo usually brings the user back to the homepage -->
		<a href="login"><img id="logo" src="images/logo.png" alt="logo"></a>
		<ul>
			<li><a href="about">About</a></li>
		</ul>
	</div>
</nav>
<div class="body-container">
	<h2>{{message}}</h2>

	<div class="container-signupForm" id="container">
		<div class="form-container sign-up-container">
			<form action="/signup" method="post">
				<h1>Create Account</h1>
				{{#each errors}}
				<p id="errorMessage" style="color: red;">{{this.msg}}</p>
				{{/each}}

				<!-- <put type="text" placeholder="Name" /> -->
				<input type="email" name="email" placeholder="Email" />
				<input type="password" name="password" placeholder="Password" />
				<button type="submit">Sign Up</button>
			</form>
		</div>
		<div class="form-container sign-in-container">
			<form action="/login" method="POST">
				<h1>Sign In</h1>
				{{#each errorArr}}
				<p style="color: red;">{{this}}</p>
				{{/each}}
				<input type="email" name="email" placeholder="Email" />
				<input type="password" name="password" placeholder="Password" />
				{{!-- <a href="#">Forgot your password?</a> --}}
				<button type="submit">Sign In</button>
			</form>
		</div>
		<div class="overlay-container">
			<div class="overlay">
				<div class="overlay-panel overlay-left">
					<h1>Welcome Back!</h1>
					<p>To keep connected with us please login with your personal info</p>
					<button class="ghost" id="signIn">Sign In</button>
				</div>
				<div class="overlay-panel overlay-right">
					<h1>Hello, Friend!</h1>
					<p>Enter your personal details and start your journey with us</p>
					<button class="ghost" id="signUp">Sign Up</button>
				</div>
			</div>
		</div>
	</div>

</div>


<script src="/javascripts/signupForm.js"></script>